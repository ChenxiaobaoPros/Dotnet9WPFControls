                                                    Rect="0 0 6 6">
                                                    <RectangleGeometry.Transform>
                                                        <TransformGroup>
                                                            <RotateTransform Angle="45" CenterX="3" CenterY="3" />
                                                            <TranslateTransform X="18" Y="4" />
                                                        </TransformGroup>
                                                    </RectangleGeometry.Transform>
                                                </RectangleGeometry>
                                            </CombinedGeometry.Geometry1>
                                            <CombinedGeometry.Geometry2>
                                                <RectangleGeometry
                                                    RadiusX="3"
                                                    RadiusY="3"
                                                    Rect="0 6 100 60" />
                                            </CombinedGeometry.Geometry2>
                                        </CombinedGeometry>
                                    </Path.Data>
                                </Path>
                            </Grid>
                        </Viewbox>
                        <Grid Margin="{TemplateBinding GridMargin}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                x:Name="PART_Tb_Title"
                                Grid.Row="0"
                                FontSize="16"
                                FontWeight="Bold"
                                Foreground="Black"
                                Text="{TemplateBinding Title}" />

                            <Button
                                x:Name="PART_Btn_Close"
                                Grid.Row="0"
                                Width="20"
                                Height="20"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Content="×"
                                FontSize="16"
                                IsCancel="True"
                                Style="{StaticResource CloseButtonStyle}" />

                            <TextBlock
                                x:Name="PART_Tb_Content"
                                Grid.Row="1"
                                FontSize="14"
                                Foreground="#aaa"
                                Text="{TemplateBinding Content}"
                                TextWrapping="Wrap" />

                            <Button
                                x:Name="PART_Btn_Next"
                                Grid.Row="2"
                                MinWidth="75"
                                MinHeight="30"
                                Margin="0,20,0,0"
                                HorizontalAlignment="Right"
                                Content="{TemplateBinding ButtonContent}"
                                IsDefault="True"
                                Style="{DynamicResource MainButtonStyle}" />
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style BasedOn="{StaticResource Styles.GuideWindow}" TargetType="{x:Type controls:GuideWindow}" />
    <Style BasedOn="{StaticResource Styles.HintForGuideWindow}" TargetType="{x:Type controls:HintForGuideWindow}" />
    <Style BasedOn="{StaticResource Styles.GuideControl}" TargetType="{x:Type controls:GuideControl}" />
    <Style BasedOn="{StaticResource Styles.HintForGuideControl}" TargetType="{x:Type controls:HintForGuideControl}" />

</ResourceDictionary>